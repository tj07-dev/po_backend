{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "exclude": ["node_modules"],
  "compileOnSave": true,
  "include": ["src/**/*"],
  "types": ["node", "aws-sdk"]
}
